#We need Apache Zookeeper so we can run Apache Drill as a daemon?
wget https://www-us.apache.org/dist/zookeeper/stable/zookeeper-3.4.12.tar.gz
tar -xzvf zookeeper-3.4.12.tar.gz

wget -q -O apache-drill-1.15.0.tar.gz http://apache.mirrors.hoobly.com/drill/drill-1.15.0/apache-drill-1.15.0.tar.gz
tar xzf apache-drill-1.15.0.tar.gz
